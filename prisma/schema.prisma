generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  admin
  user
}

model Profile {
  id          String   @id @db.Uuid
  username    String?  @unique
  displayName String?  @map("display_name")
  avatarUrl   String?  @map("avatar_url")
  role        UserRole @default(user)
  isDisabled  Boolean  @default(false) @map("is_disabled")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  projects               Project[]
  generations            Generation[]
  projectMembers         ProjectMember[]
  modelPins              UserModelPin[]
  projectChats           ProjectChat[]
  projectChatMessages    ProjectChatMessage[]
  workflowExecutions     WorkflowExecution[]
  workspaceProjectMembers WorkspaceProjectMember[]

  @@map("profiles")
}

model WorkspaceProject {
  id          String   @id @default(uuid()) @db.Uuid
  name        String
  description String?  @db.Text
  type        String   @default("create")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  members   WorkspaceProjectMember[]
  briefings Project[]

  @@index([updatedAt(sort: Desc), id(sort: Desc)])
  @@map("workspace_projects")
}

model WorkspaceProjectMember {
  workspaceProjectId String   @map("workspace_project_id") @db.Uuid
  userId             String   @map("user_id") @db.Uuid
  role               String   @default("member")
  createdAt          DateTime @default(now()) @map("created_at")

  workspaceProject WorkspaceProject @relation(fields: [workspaceProjectId], references: [id], onDelete: Cascade)
  user             Profile          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([workspaceProjectId, userId])
  @@index([userId])
  @@map("workspace_project_members")
}

model Project {
  id                  String   @id @default(uuid()) @db.Uuid
  name                String
  description         String?
  coverImageUrl       String?  @map("cover_image_url")
  ownerId             String   @map("owner_id") @db.Uuid
  isShared            Boolean  @default(true) @map("is_shared")
  workspaceProjectId  String?  @map("workspace_project_id") @db.Uuid
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")

  owner            Profile           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  workspaceProject WorkspaceProject? @relation(fields: [workspaceProjectId], references: [id], onDelete: SetNull)
  sessions         Session[]
  members          ProjectMember[]
  chats            ProjectChat[]
  workflows        Workflow[]

  @@index([ownerId])
  @@index([isShared, ownerId])
  @@index([workspaceProjectId])
  @@index([updatedAt(sort: Desc), id(sort: Desc)])
  @@map("projects")
}

model ProjectMember {
  projectId String   @map("project_id") @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  role      String   @default("member")
  createdAt DateTime @default(now()) @map("created_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    Profile @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([projectId, userId])
  @@index([userId])
  @@map("project_members")
}

model Session {
  id        String   @id @default(uuid()) @db.Uuid
  projectId String   @map("project_id") @db.Uuid
  name      String
  type      String
  isPrivate Boolean  @default(true) @map("is_private")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  generations Generation[]

  @@index([projectId])
  @@index([projectId, isPrivate])
  @@index([projectId, createdAt(sort: Desc)])
  @@map("sessions")
}

model Generation {
  id                    String    @id @default(uuid()) @db.Uuid
  sessionId             String    @map("session_id") @db.Uuid
  userId                String    @map("user_id") @db.Uuid
  modelId               String    @map("model_id")
  prompt                String    @db.Text
  negativePrompt        String?   @map("negative_prompt") @db.Text
  parameters            Json
  status                String
  cost                  Decimal?  @db.Decimal(10, 6)
  createdAt             DateTime  @default(now()) @map("created_at")
  source                String    @default("session")
  workflowExecutionId   String?   @map("workflow_execution_id") @db.Uuid
  errorMessage          String?   @map("error_message") @db.Text
  errorCategory         String?   @map("error_category")
  errorRetryable        Boolean?  @map("error_retryable")
  lastHeartbeatAt       DateTime? @map("last_heartbeat_at")

  session Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  user    Profile  @relation(fields: [userId], references: [id], onDelete: Cascade)
  outputs Output[]

  @@index([sessionId])
  @@index([userId])
  @@index([sessionId, userId])
  @@index([sessionId, status])
  @@index([sessionId, createdAt(sort: Desc), id(sort: Desc)])
  @@index([status, createdAt])
  @@map("generations")
}

model Workflow {
  id          String   @id @default(uuid()) @db.Uuid
  projectId   String   @map("project_id") @db.Uuid
  name        String
  description String?  @db.Text
  graphData   Json     @map("graph_data")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  project     Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  executions  WorkflowExecution[]

  @@index([projectId])
  @@map("workflows")
}

model WorkflowExecution {
  id          String    @id @default(uuid()) @db.Uuid
  workflowId  String    @map("workflow_id") @db.Uuid
  userId      String    @map("user_id") @db.Uuid
  status      String    @default("pending")
  results     Json?
  startedAt  DateTime?  @map("started_at")
  completedAt DateTime? @map("completed_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  user     Profile  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workflowId])
  @@index([userId])
  @@map("workflow_executions")
}

model Output {
  id           String   @id @default(uuid()) @db.Uuid
  generationId String   @map("generation_id") @db.Uuid
  fileUrl      String   @map("file_url")
  fileType     String   @map("file_type")
  width        Int?
  height       Int?
  duration     Float?
  isApproved   Boolean  @default(false) @map("is_approved")
  createdAt    DateTime @default(now()) @map("created_at")

  generation Generation @relation(fields: [generationId], references: [id], onDelete: Cascade)

  @@index([generationId])
  @@index([generationId, fileType])
  @@index([generationId, createdAt(sort: Asc)])
  @@map("outputs")
}

model Model {
  id        String   @id
  name      String
  provider  String
  type      String[]
  config    Json
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  pins UserModelPin[]

  @@map("models")
}

model UserModelPin {
  userId   String @map("user_id") @db.Uuid
  modelId  String @map("model_id")
  pinOrder Int    @map("pin_order")

  user  Profile @relation(fields: [userId], references: [id], onDelete: Cascade)
  model Model   @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@id([userId, modelId])
  @@index([userId])
  @@map("user_model_pins")
}

model AllowedEmail {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  note      String?
  addedBy   String   @map("added_by") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")

  @@map("allowed_emails")
}

model PromptEnhancementPrompt {
  id           String   @id @default(uuid()) @db.Uuid
  name         String
  description  String?  @db.Text
  systemPrompt String   @db.Text
  isActive     Boolean  @default(true) @map("is_active")
  modelIds     String[]
  createdBy    String   @db.Uuid
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")
  updatedBy    String   @db.Uuid

  @@index([isActive])
  @@map("prompt_enhancement_prompts")
}

model ProjectChat {
  id        String   @id @default(uuid()) @db.Uuid
  projectId String   @map("project_id") @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  title     String   @default("Brainstorm")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  project  Project              @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user     Profile              @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages ProjectChatMessage[]

  @@index([projectId, userId])
  @@index([userId])
  @@map("project_chats")
}

model ProjectChatMessage {
  id        String   @id @default(uuid()) @db.Uuid
  chatId    String   @map("chat_id") @db.Uuid
  userId    String?  @map("user_id") @db.Uuid
  role      String
  content   String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")

  chat  ProjectChat @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user  Profile?    @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([chatId, createdAt])
  @@index([userId])
  @@map("project_chat_messages")
}
